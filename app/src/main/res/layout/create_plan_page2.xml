    tools:layout_editor_absoluteX="6dp"
    tools:layout_editor_absoluteY="5dp">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
